rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Rules for veo_app
    match /veo_cannes/{videoId} {
      // Public videos are readable by anyone
      // Private videos are readable only by the owner
      allow read: if resource.data.public == true ||
                     (request.auth != null && request.auth.uid == resource.data.uid);

      // The backend service can write video documents
      allow write: if request.auth.token.email_verified &&
                    request.auth.token.email.matches(".*@.*gserviceaccount.com");
    }

    // The backend service can read the allowlist
    match /config/allowlist {
        allow get: if request.auth.token.email_verified &&
                    request.auth.token.email.matches(".*@.*gserviceaccount.com");
    }

    // Rules for editorial-look

    // Users can read and write to the lookbook if they are authenticated.
    // A future feature will be a public gallery, so reads are open for now.
    match /lookbook/{document} {
      allow read, write: if request.auth != null;
    }

    // No one can read or write to the allowlist from the client. This is handled by the backend service.
    match /lookbook_allowlist/{document} {
      allow read, write: if false;
    }
  }
}
